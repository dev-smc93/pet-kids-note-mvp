// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Prisma Client 생성 설정 (DB URL은 prisma.config.ts에서 관리)
generator client {
  provider = "prisma-client-js"
}

// PostgreSQL 데이터소스 (Supabase)
datasource db {
  provider = "postgresql"
}

// profiles - 사용자 프로필 (Supabase Auth user_id와 연동)
model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  role      Role     @default(GUARDIAN)
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  ownedGroups      Group[]         @relation("GroupOwner")
  memberships      Membership[]
  ownedPets        Pet[]           @relation("PetOwner")
  authoredReports Report[]        @relation("ReportAuthor")
  reportReads     ReportRead[]
  reportComments  ReportComment[] @relation("ReportCommentAuthor")

  @@map("profiles")
}

// Role - 사용자 역할 (관리자/보호자)
enum Role {
  ADMIN    // 관리자 (센터/호텔/유치원)
  GUARDIAN // 보호자
}

// groups - 원(시설), 관리자가 회원가입 시 생성
model Group {
  id           String   @id @default(uuid())
  name         String
  ownerUserId  String   @map("owner_user_id")
  sido         String   @map("sido")       // 시/도
  sigungu      String   @map("sigungu")    // 시/군/구
  address      String   @map("address")    // 상세 주소
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  owner        Profile      @relation("GroupOwner", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  memberships  Membership[]

  @@map("groups")
}

// pets - 반려동물 (보호자가 등록)
model Pet {
  id           String   @id @default(uuid())
  ownerUserId  String   @map("owner_user_id")
  name         String
  breed        String?  @map("breed")      // 품종
  photoUrl     String?  @map("photo_url")
  note         String?  // 특이사항
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  owner        Profile      @relation("PetOwner", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  memberships  Membership[]
  reports      Report[]

  @@map("pets")
}

// memberships - 보호자-원-반려동물 연결 (승인 요청 방식)
model Membership {
  id        String         @id @default(uuid())
  userId    String         @map("user_id")
  groupId   String         @map("group_id")
  petId     String         @map("pet_id")
  status    MembershipStatus @default(PENDING)
  createdAt DateTime       @default(now()) @map("created_at")
  updatedAt DateTime       @updatedAt @map("updated_at")

  user  Profile @relation(fields: [userId], references: [userId], onDelete: Cascade)
  group Group   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  pet   Pet     @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId, petId])
  @@map("memberships")
}

enum MembershipStatus {
  PENDING   // 승인 대기
  APPROVED  // 승인됨
  REJECTED  // 거절됨
}

// reports - 알림장 (관리자가 작성)
model Report {
  id           String   @id @default(uuid())
  petId        String   @map("pet_id")
  authorUserId String   @map("author_user_id")
  content      String   @db.Text
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  pet            Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)
  author         Profile         @relation("ReportAuthor", fields: [authorUserId], references: [userId], onDelete: Cascade)
  media          ReportMedia[]
  reportReads    ReportRead[]
  reportComments ReportComment[]

  @@map("reports")
}

// report_media - 알림장 첨부 사진
model ReportMedia {
  id        String   @id @default(uuid())
  reportId  String   @map("report_id")
  url       String
  type      String
  createdAt DateTime @default(now()) @map("created_at")

  report Report @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@map("report_media")
}

// report_comments - 알림장 댓글 (관리자 ↔ 보호자 간 대화)
model ReportComment {
  id           String    @id @default(uuid())
  reportId     String    @map("report_id")
  authorUserId String    @map("author_user_id")
  content      String    @db.Text
  scheduledAt  DateTime? @map("scheduled_at")  // 예약 전송 시각 (null이면 즉시 전송)
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  report Report  @relation(fields: [reportId], references: [id], onDelete: Cascade)
  author Profile @relation("ReportCommentAuthor", fields: [authorUserId], references: [userId], onDelete: Cascade)

  @@map("report_comments")
}

// report_reads - 알림장 읽음 처리
model ReportRead {
  id        String   @id @default(uuid())
  reportId  String   @map("report_id")
  userId    String   @map("user_id")
  readAt    DateTime @default(now()) @map("read_at")

  report Report  @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user   Profile @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@unique([reportId, userId])
  @@map("report_reads")
}
